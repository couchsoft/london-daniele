{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

<article class="post-content {{post_class}} {{#unless feature_image}}no-image{{/unless}}">

  {{#post}}
    <header class="post-content-header">
        <h1 class="post-content-title">{{title}}</h1>
    </header>
    {{#if feature_image}}
    <div class="post-content-image">
        <img class="kg-image" src="{{feature_image}}" alt="{{title}}" />
    </div>
    {{/if}}
    <div class="post-content-body">
        {{content}}
    </div>
  {{/post}}

  <h2>Publications</h2>
  {{#get "posts" filter="tag:>publication+tag:<=publication-x" include="tags" order="published_at desc" limit="5"}}
    <div class="post-content-body">
      <ol reversed>
        {{#foreach posts}}
            {{> "post-list"}}
        {{/foreach}}
      </ol>
    </div>
  {{/get}}

  <h2>Talks</h2>
  {{#get "posts" filter="tag:>travel+tag:<=travel-x" include="tags" order="published_at desc" limit="5"}}
    <div class="post-content-body">
      <ol reversed>
        {{#foreach posts}}
            {{> "post-list"}}
        {{/foreach}}
      </ol>
    </div>
  {{/get}}
</article>
