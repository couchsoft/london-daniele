{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}


{{#get "pages" filter="slug:home" limit="1" as |post|}}
  {{#post}}
  <article class="post-content">
    <div class="row">
      {{#if feature_image}}
        <div class="col-6">
          <img src="{{feature_image}}" alt="{{title}}" style="margin-top: 1rem;" />
        </div>
        <div class="col-6">
          <div class="post-content-body">
              {{content}}
          </div>
        </div>
      {{else}}
        <div class="col-12">
          <div class="post-content-body">
              {{content}}
          </div>
        </div>
      {{/if}}
    </div>
  </article>
  {{/post}}
{{else}}
  {{#if @site.description}}
    <header class="page-head">
        <h2 class="page-head-title">{{@site.description}}</h2>
    </header>
  {{/if}}
{{/get}}
